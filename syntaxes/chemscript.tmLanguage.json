{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ChemScript",
  "scopeName": "source.chemscript",
  "fileTypes": ["chemscript", "cscript"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#function_calls" },
    { "include": "#process_variables" },
    { "include": "#numerics" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.chemscript",
          "match": "//.*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.definition.chemscript",
          "match": "\\b(PROCESS|END PROCESS|RULE|END RULE)\\b"
        },
        {
          "name": "keyword.control.flow.chemscript",
          "match": "\\b(IF|THEN|END IF|WHEN|IS TRIGGERED|ATTEMPT|END ATTEMPT|ON FAILURE|RETRY|WAIT)\\b"
        },
        {
          "name": "keyword.control.engine.chemscript",
          "match": "\\b(PAUSE PROCESS|RESUME PROCESS|FAIL)\\b"
        },
        {
          "name": "keyword.control.variable.chemscript",
          "match": "\\b(DEFINE|AS|CALCULATE|LOG)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.chemscript",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.chemscript",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.chemscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.chemscript",
              "match": "\\\\."
            },
            {
              "include": "#string_interpolation"
            }
          ]
        }
      ]
    },
    "string_interpolation": {
      "name": "variable.interpolation.chemscript",
      "begin": "\\$\\{",
      "end": "\\}",
      "patterns": [
        {
          "name": "variable.other.chemscript",
          "match": "[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "numerics": {
      "patterns": [
        {
          "name": "constant.numeric.time.chemscript",
          "match": "\\b\\d+(\\.\\d+)?(ms|s|m|h|d)\\b"
        },
        {
          "name": "constant.numeric.chemscript",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.chemscript",
          "match": "(=|\\+|\\-|\\*|/|>|<|==|!=|>=|<=|&&|\\|\\|)"
        }
      ]
    },
    "function_calls": {
      "patterns": [
        {
          "name": "entity.name.function.chemscript",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\()"
        }
      ]
    },
    "process_variables": {
      "patterns": [
        {
          "name": "variable.other.scoped.chemscript",
          "match": "\\b([A-Z_][a-zA-Z0-9_]*)\\.([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": {
              "name": "entity.name.type.process.chemscript"
            },
            "2": {
              "name": "variable.other.property.chemscript"
            }
          }
        }
      ]
    }
  }
}