{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "'", "close": "'", "notIn": ["string"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "'", "close": "'" },
        { "open": "\"", "close": "\"" }
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(PROCESS|RULE|ATTEMPT|IF)\\b",
            "end": "^\\s*(END PROCESS|END RULE|END ATTEMPT|END IF)\\b"
        }
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*(PROCESS|RULE|ATTEMPT|IF|ON FAILURE)\\b.*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*(END PROCESS|END RULE|END ATTEMPT|END IF)\\b.*$",
            "action": { "indent": "outdent" }
        }
    ]
}